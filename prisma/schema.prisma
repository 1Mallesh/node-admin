generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  firstName String
  lastName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
model File {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  filename  String
  path      String
  mimetype  String
  size      Int
  createdAt DateTime @default(now())
}

